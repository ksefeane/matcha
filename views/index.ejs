<%- include ('partials/header') %>
<form action="/filter" method="post" class="form-inline my-4">
	<div class="input-group">
		<div class="input-group-prepend">
			<select name="sort" id="sort" class="btn text-info btn-outline-secondary form-control bg-dark">
				<option value="city">city</option>
				<option value="age">age</option>
				<option value="popularity">popularity</option>
				<option value="interests">interests</option>
			</select>
		</div>
		<input type="by" name="by" id="find" placeholder="filter..." class="form-control col-md-6">
		<div class="input-group-append">
			<button type="submit" class="btn btn-outline-info bg-light border-left-0 border"><i class="fa fa-filter"></i></button>
		</div>
		<label for="order" class="btn text-dark p-0"></label>
			<input type="radio" id="asc" name="order" value="asc" class="mr-2">
			<label for="asc"><i class="text-info fa fa-sort-alpha-asc mr-2"></i></label>
			<input type="radio" id="desc" name="order" value="desc" class="mr-2">
			<label for="desc"><i class="text-info fa fa-sort-alpha-desc mr-2"></i></label>
	</div>
</form>
<%if (e) {%><span class="text-danger"><%=e%></span><%}%>

<div class="row row-cols-1 row-cols-md-3">
<% if (suggestions) { for (let i in suggestions) {%>
	<div class="col mb-2">
		<div class="card text-white bg-transparent">
			<img src="/uploads/<%=suggestions[i].username%>" id="pro" onerror="this.onerror=null;this.src='/uploads/avatar.jpg';" class="card-img" width="200" height="350">
			<a href="/p/<%=suggestions[i].username%>" style="text-decoration:none">
			<div class="card-body card-img-overlay text-danger">
				<h2 class="text-warning"><%=suggestions[i].username%></h2>
				<h3 class="btn bg-warning" style="opacity:0.8"><%=suggestions[i].gender%></h3><br>
				<h3 class="btn bg-warning" style="opacity:0.8"><%=suggestions[i].age%></h3><br>
				<h3 class="btn bg-warning" style="opacity:0.8"><%=suggestions[i].city%></h3><br>
				<h3 class="btn bg-warning" style="opacity:0.8"><%=suggestions[i].interests%></h3><br>
				<div class="align-self-md-end">
					<a href='/p/<%=suggestions[i].username%>' class="btn bg-danger">profile</a>
					<a href='/chat/<%=suggestions[i].username%>' class="btn bg-info">chat</a>
				</div>
			</div>
			</a>
		</div>
	</div>

<%}}%>
</div>

<%- include ('partials/footer') %>
